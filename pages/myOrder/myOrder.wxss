}


.no-data{width: 100%;height: 80vh;display: flex;flex-direction: column;align-items: center;padding-top: 180rpx;color: #555;}
.no-data>.nodata-img-wrapper{width: 60%;}
.no-data>.nodata-img-wrapper>image{width: 100%;}
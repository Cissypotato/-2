.card_pack_0 {background:#fff;}
.user_pack {width:90vw; padding:0 5vw 5vw 5vw; }
.user_pack>.avatar {width:16vw; height:16vw; border-radius:16vw; overflow:hidden; display:block; float:right; border:1px solid #f5f5f5;}
.user_pack>.user-name { display:block; float:left; height:16vw; width:70vw;}
.user_pack>.user-name>.t1 { height:6vw;}
.user_pack>.user-name>.t2 {font-size:0.8rem; color:#e0e0e0; margin-left:1rem; }
.user_pack>.user-name>.b {width:100%; display: block; height:8vw; margin-top:3vw;}
.user_pack>.user-name>.b>.t3 { font-size:0.7rem; color:#ff5722;  float:left; display:block; border:1px solid #ffccbc; margin-right:1rem; padding:1vw; opacity:0.75; border-radius:4px;}

.line {width:90vw; height:1px; border-bottom:1px solid #f5f5f5; margin-left:5vw;}

.data_pack {width:100%;  box-shadow:0px 3px 4px -1px rgba(0,0,0,0.25); padding:5vw 0vw 7vw 0vw;}
.data_pack>.list {width:33%; float:left;  text-align:center;}
.data_pack>.list>.t {font-size:1.6rem; font-weight:900;}
.data_pack>.list>.b {font-size:0.7rem; color:#9e9e9e;}

.list_pack  {width:100vw; padding-bottom:30vw;}
.list_pack>.list {width:80vw; background:#fff; box-shadow:0px 3px 4px -1px rgba(0,0,0,0.15); margin:5vw 0 0 5vw; padding:5vw; border-radius:4px; height:10vw; line-height:10vw;}
.list_pack>.list>image {width:7vw; height:7vw; margin-top:2vw; float:left;}
.list_pack>.list>text {font-size:0.9rem; margin-left:3vw;}
.list_pack>.list>icon { color:#ff5722; font-size:1.8rem; float:right;}